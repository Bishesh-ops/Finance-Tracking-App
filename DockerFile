# Dockerfile
FROM python:3.12-slim-bookworm

# Set the working directory in the container
WORKDIR /app

# --- NEW DEBUG LINE: List contents of the build context ---
# This command will show what Docker perceives as being in the /app directory
# at this stage of the build process.
RUN ls -la || dir # Use 'ls -la' for Linux containers, 'dir' for Windows containers. Python is Linux.
# --- END DEBUG LINE ---

# Copy the requirements file into the container
COPY requirements.txt .

# Install any needed packages specified in requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy the entire backend application source code into the container
COPY . .

# Expose the port that Uvicorn will run on
EXPOSE 8000

# Command to run the application using Uvicorn
CMD ["uvicorn", "finance_app_backend.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]